<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsFragment">

    <!-- 系统设置标题 -->
    <TextView
        android:id="@+id/system_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="系统"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 点击后显示设备 IP 地址的 TextView -->
    <TextView
        android:id="@+id/system_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设备 IP 地址: 未知"
        android:textSize="16sp"
        android:visibility="gone"
    android:layout_marginTop="8dp"
    android:layout_marginStart="16dp"
    app:layout_constraintTop_toBottomOf="@id/system_title"
    app:layout_constraintStart_toStartOf="parent" />

    <!-- 这里可以继续添加其他设置项 -->
    <TextView
        android:id="@+id/other_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="其他设置"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/system_info"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
